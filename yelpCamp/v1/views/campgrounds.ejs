<% include partials/header %>

<div class="container">

 <header class="jumbotron">
   
   <div class="container">
   
   <h1>Welcome to YelpCamp!</h1>
   <p>view our hand-picker campgrounds from all over the world</p>
   <p>
    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new campgrounds</a>
   </p>
   
   </div>
    
</header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
  
    <% campgrounds.forEach(function(camps){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
            
            <img src="<%= camps.image %>" alt="<%= camps.name %>">
         
            <div class="caption">
              
              <h4>
              <%= camps.name %>
              </h4>
              
            </div>
        </div>
      </div>

  <% }); %>
  
  </div>



</div>

<% include partials/footer %>
